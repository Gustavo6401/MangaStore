<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MangaStore.Web</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/MangaStore.Web.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-toggleable-sm navbar-dark bg-warning border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand bg-warning" asp-area="" asp-controller="Home" asp-action="Index"><strong>Mangá Store</strong></a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        @if(User.IsInRole("Administrador") || User.IsInRole("Estoquista"))
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Index">Dados de Usuário</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Produto" asp-action="Index">Dados de Produto</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Pedido" asp-action="Index">Dados de Pedidos</a>
                            </li>
                        }                        
                    </ul>
                    <div class="align-self-end">
                        <ul class="navbar-nav">
                            @if(User.IsInRole("Cliente"))
                            {
                                <li class="nav-item">
                                    <a class="nav-item text-dark" asp-controller="Cliente" asp-action="MeuCadastro">@User.Identity.Name</a>
                                </li>
                            }
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Login">Fazer Login</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Carrinho" asp-action="Index">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                </a>
                            </li>
                    </ul>
                </div>
                </div>                
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @*<div class="col-md-3 align-self-end">
                <div class="bg-warning mt-3 p-3 text-black">
                    <vc:carrinho />
                </div>
            </div>*@
            <partial name="_NotificationPartial"/>
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-warning">
        <div class="container">
            &copy; 2022 - MangaStore.Web - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://kit.fontawesome.com/5a7d75a630.js" crossorigin="anonymous"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
