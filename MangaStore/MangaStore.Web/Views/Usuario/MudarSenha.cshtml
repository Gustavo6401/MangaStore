@model MangaStore.Web.Models.Usuario

@{
    ViewData["Title"] = "Alterar Senha";
}

<h1>Alterar Senha</h1>

<div class="row">
    <div class="col-md-3">
        <form asp-action="MudarSenha">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for=Senha class="control-label">Digite sua Nova Senha</label>
                <input type="password" asp-for="Senha" class="form-control" />
                <span asp-validation-for=Senha class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Confirme sua Senha</label>
                <input type="password" class="form-control" />
                <span class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar Senha" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-success" asp-action="Index">Voltar Para a Lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}